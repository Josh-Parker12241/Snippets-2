def login_user():  #### TEST WITH 'or 1 = 1; --
	#set as global variable
	global userlogin
	#Presence check
	if user_textboxLogin.value == " ":
		#Info box for UX
		info("Error", "You must enter a valid username")
		#Presence check
	elif PW_textboxLogin.value == " ":
		#Info box for UX
		info("Error", "You must enter a password")
		
	else:
		# username is set to user input in username textbox
		userlogin = user_textboxLogin.value
		# password  set to user input in password textbox
		Passlogin = PW_textboxLogin.value
		#SQL to check if username input is in database
		sqlselect = "SELECT * FROM Customer_table WHERE CustUsername = '"+userlogin+"'"
		#Searches all rows in customer table in the database file
		rows = query_database(database_file, sqlselect)
		#SQL to check if password input is in the customer table in the database
		sqlselectPass = "SELECT * FROM Customer_table WHERE Custpassword = '"+Passlogin+"'"
		#Searches all rows in customer table in the database file
		rows2 = query_database(database_file, sqlselectPass)
		if len(rows) == 0 or len(rows2) == 0: ### This checks that the user was found ###
			info("Error","Not Found")
		else:
			#user is granted access
			#info box for UX
			info("Log in","Success all details found")
			userlogin = rows[0][0]
			#hides LogInwindow
			LogInwindow.hide()
			#shows Review Window
			ReviewWindow.show()
